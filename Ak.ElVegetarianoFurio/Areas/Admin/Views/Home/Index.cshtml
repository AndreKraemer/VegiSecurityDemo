@model IEnumerable<Ak.ElVegetarianoFurio.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Benutzer</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @using (Html.BeginForm("MakeAdmin", "Home", FormMethod.Post, new { id = item.Id, Area = "Admin" }))
                {
                    <input type="submit" class="btn btn-danger" value="Admin"/>
                }
                @using (Html.BeginForm("Delete", "Home", FormMethod.Post, new {id = item.Id, Area = "Admin"}))
                {
                    <input type="submit" class="btn btn-danger" value="Löschen"/>
                }

            </td>
        </tr>
    }

</table>
