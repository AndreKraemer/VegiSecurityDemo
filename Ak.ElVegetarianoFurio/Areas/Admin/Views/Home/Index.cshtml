@model IEnumerable<Ak.ElVegetarianoFurio.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Benutzer</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.UserName)
            </td>
            <td>
                @using (Html.BeginForm("MakeAdmin", "Home", new { id = user.Id, Area = "Admin" }, FormMethod.Post))
                {
                    <input type="submit" class="btn btn-primary" value="Admin"/>
                }
                @using (Html.BeginForm("Delete", "Home", new {id = user.Id, Area = "Admin"}, FormMethod.Post))
                {
                    <input type="submit" class="btn btn-danger" value="Löschen"/>
                }

            </td>
        </tr>
    }

</table>
